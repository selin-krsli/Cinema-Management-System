@model MovieDetailModel

<div class="card mb-3">
    <div class="card-body">
        <div class="row no-gutters">
            <div class="col-md-3">
                <img src="~/movie_img/@Model.Movie.ImageUrl" class="card-img" />
            </div>
            <div class="card text-center col-md-9">

                <h5 class="card-title">@Model.Movie.MovieName</h5><hr />
                @foreach (var item in Model.Categories)
                {
                    <a asp-controller="movie" asp-action="list" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">@item.Name</a>
                }
                <p class="card-text"><small class="text-muted">Director: @Model.Movie.Director</small></p>
                <p class="card-text"><small class="text-muted">Genre: @Model.Movie.Genre</small></p>
                <p class="p-3">@Model.Movie.MovieStory</p>
                <div class="mb-3">
                    <h4 class="text-primary mb-3">
                        <i class="fas fa-lira-sign"></i>@Model.Movie.Price
                    </h4>
                </div>
                <form asp-controller="BookingCart" asp-action="BookingNow" method="post" class="form-inline">
                   <input type="hidden" name="movieId" value="@Model.Movie.MovieId">

                   <div class="input-group mb-3">
                       <input type="number" name="quantity" class="form-control" value="1" min="1" step="1" style="width:100px;" />
                       <div class="input-group-append">
                           <button type="submit" class="btn btn-primary">
                           <i class="fas fa-cart-plus"></i>Booking Now
                            </button>
                       </div>
                   </div>
                </form>
            </div>
        </div>
    </div>
</div>

<br />


