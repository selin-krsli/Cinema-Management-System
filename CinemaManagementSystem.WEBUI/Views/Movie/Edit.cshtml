@using CinemaManagementSystem.ENTITY
@model Movie

<form method="post">
    <input type="hidden" name="Movie.MovieId" value="@Model.MovieId" />
    <div class="form-group">
        <label for="Name">Movie Name</label>
        <input asp-for="MovieName" value="@Model.MovieName" class="form-control">
    </div>
    <div class="form-group">
        <label for="ReleaseYear">ReleaseYear</label>
        <input asp-for="ReleaseYear" value="@Model.ReleaseYear" class="form-control">
    </div>
    <div class="form-group">
        <label for="Genre">Genre</label>
        <input asp-for="Genre" value="@Model.Genre" class="form-control">
    </div>
    <div class="form-group">
        <label for="Director">Director</label>
        <input asp-for="Director" value="@Model.Director" class="form-control">
    </div>
    <div class="form-group">
        <label for="ImageUrl">ImageUrl</label>
        <input asp-for="ImageUrl" value="@Model.ImageUrl" class="form-control">
    </div>
