@model List<Category>
<div class="list-group">
    <a href="/movie/list" class="list-group-item list-group-item-light list-group-item-action active">
      CATEGORIES
    </a>
    
    @foreach (var item in Model)
    {
        <a asp-controller="Movie"
        asp-action="List"
        asp-route-category="@item.Url"
       
        class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==item.Url?"active":"")">
        @item.Name
    </a>
    }
</div>
