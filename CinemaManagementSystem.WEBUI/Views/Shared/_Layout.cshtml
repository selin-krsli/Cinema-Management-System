<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @RenderSection("Css",false)
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CinemaManagementSystem.WEBUI.styles.css" asp-append-version="true" />
    <title>CinemaManagementSystem</title>
</head>
<body>
    @await Html.PartialAsync("_navbar")
    @* @RenderSection("Categories", required: false)*@
    <main class="my-3">       
        <div class="container">   
            @if(TempData["message"] != null)
            {
                <partial name="_ResultMessage" model="@(TempData.Get<MessageInfo>("message"))"/>
            }
            @RenderBody()
            </div>
    </main>

    <footer class=" bg-dark text-white text-center border-top footer text-muted">
        <div class="container">
              CinemaManagementSystem | 2023  <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
