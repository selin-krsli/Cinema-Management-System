@model IEnumerable<User>
@section Css
{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap4.min.css" />
}

@section Scripts
{
    <script src="stylesheet" href="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="stylesheet" href="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap4.min.js"></script>
    <script>let table = new DataTable('#myTable');</script>
}
<div class="row">
    <div class="col-md-12">
        <h3>ADMIN PANEL - User List </h3>
        <hr />
        <a class="btn btn-primary btn-sm" href="/Admin/UserCreate">Create User</a>
        <table id="myTable" class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td>FirstName</td>
                    <td>LastName</td>
                    <td>UserName</td>
                    <td>Email</td>
                    <td>EmailConfirmed</td>
                    <td style="width:160px;"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.EmailConfirmed?"":"bg-warning")">
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>@item.EmailConfirmed</td>
                            <td>
                                <a href="/Admin/UserEdit/@item.Id" class="btn btn-primary btn-sm mr-2">Edit</a>
                                <form action="/Admin/DeleteUser/@item.Id" method="post" style="display:inline;">
                                    <input type="hidden" name="UserId" value="@item.Id">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>There is not any users!</h3>
                    </div>
                }

            </tbody>
        </table>
    </div>
</div>