@model IEnumerable<IdentityRole>

<div class="row">
    <div class="col-md-12">
        <h3>ADMIN PANEL - Role List </h3>
        <hr />
         <a class="btn btn-primary btn-sm" href="/Admin/RoleCreate">Create Role</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width:250px;">Id</td>
                    <td>Role Name</td>
                    <td style="width:160px;"></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
        @if(Model.Count()>0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td >@item.Name</td>
                    <td>
                               @* <a href="/Admin/Role/@item.Id" class="btn btn-primary btn-sm mr-2">Edit</a>*@
                        <a href="/Admin/RoleEdit/@item.Id" class="btn btn-primary btn-sm mr-2">Edit</a>
                        <form action="/Admin/RoleDelete/@item.Name" method="post" style="display:inline;">
                           <input type="hidden" name="RoleId" value="@item.Name">
                           <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>

                    </td>
                </tr>
            }
        }else
        {
            <div class="alert alert-warning">
                        <h3>There is not any roles!</h3>
            </div>
        }

            </tbody>
        </table>
    </div>
</div>