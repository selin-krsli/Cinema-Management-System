@model MovieModel

<h3>Edit Movie</h3>
<hr />

        <form action="/Admin/MovieEdit" method="post">
            <div class="row">
                <div class="col-md-8 ">
                <input type="hidden" name="MovieId" value="@Model.MovieId" />
                 <div class="form-group row">
                <label asp-for="MovieName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="MovieName" class="form-control" />
                    <span asp-validation-for="MovieName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Url" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Url" class="form-control" />
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="MovieStory" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="MovieStory" class="form-control"></textarea>
                    <span asp-validation-for="MovieStory" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Genre" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Genre" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Director" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Director" />
                    <span asp-validation-for="Director" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="ImageUrl" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Save Movie</button>
                </div>
             </div>
             </div>


    <div class="col-md-4">
        @for(int i=0;i<Model.SelectedCategories.Count;i++)
            {
                <input type="hidden" name="SelectedCategories[@i].CategoryId" value="@Model.SelectedCategories[@i].CategoryId">
                <input type="hidden" name="SelectedCategories[@i].Name" value="@Model.SelectedCategories[@i].Name">
            }
            @foreach(var item in (List<Category>)ViewBag.Categories)
            {
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" name="categoryIds" value="@item.CategoryId" 
                    id="category_@(item.CategoryId)" @(Model.SelectedCategories.Any(i=>i.CategoryId==item.CategoryId)?"checked":"")>
                    <label class="custom-control-label" for="category_@(item.CategoryId)">@item.Name</label>
                 </div>
            }
            <hr />
    <div class="custom-control custom-checkbox">
        <input asp-for="IsApproved" type="checkbox" class="custom-control-input">
        <label asp-for="IsApproved" class="custom-control-label"></label>
    </div>
            <div class="custom-control custom-checkbox">
                <input asp-for="IsHome" type="checkbox" class="custom-control-input">
                <label asp-for="IsHome" class="custom-control-label"></label>
            </div>

    </div>
    </div>
 </form>


