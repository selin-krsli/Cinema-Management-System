@model CategoryListViewModel

<div class="row">
    <div class="col-md-12">
        <h3>Admin Categories</h3>
        <hr />
        <a class="btn btn-primary btn-sm" href="/Admin/CategoryCreate">Add Category</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td style="width: 150px;"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Categories.Count > 0)
                {
                    @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.Name</td>
                            <td>
                                <a href="/Admin/CategoryEdit/@item.CategoryId" class="btn btn-primary btn-sm mr-2">Edit</a>
                                <form action="/Admin/DeleteCategory/@item.CategoryId" method="post" style="display:inline;">
                                    <input type="hidden" name="categoryId" value="@item.CategoryId">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        There is not any categories!
                    </div>
                }

            </tbody>
        </table>
    </div>
</div>